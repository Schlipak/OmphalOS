//=================================//
// Base styles for XTechne desktop //
//=================================//

@require 'DefaultVars'

.xtechneLoginContainer
    display flex
    flex-direction row
    justify-content center
    align-items center
    position relative
    top 0
    left 0
    width 100%
    height 100%
    margin 0
    padding 0
    font-family $WIDE
    background-color darken($C4, 40%)
    opacity 1
    animation xtechneLoginFadeIn .4s
    animation-iteration-count 1
    animation-timing-function ease-in-out
    transition opacity .6s
    &:after
        content ''
        display block
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-image url('../usr/share/img/omphalos_nobg_500.png')
        background-position calc(100% - 20px) calc(100% - 20px)
        background-repeat no-repeat
        opacity .1
        animation xtechneLoginSlide 3s
        animation-iteration-count 1
        animation-delay 1s
        animation-fill-mode forwards
        animation-timing-function ease-in-out
        pointer-events none
    &.dismissing
        opacity 0
    &> .xtechneLoginBox
        display flex
        flex-direction column
        justify-content center
        align-items center
        position relative
        font-size 16px
        min-width 300px
        min-height 150px
        padding 4em 3em 1em
        background-color $XDEFAULT_BG
        color $XDEFAULT_FG
        border-radius 6px 6px 5px 5px
        animation xtechneLoginSlideIn 1s
        animation-iteration-count 1
        animation-timing-function ease-in-out
        box-shadow 0 10px 10px 0 rgba(0,0,0,.19), 0 6px 3px 0 rgba(0,0,0,.23)
        &:before
            content 'Welcome'
            display block
            position absolute
            box-sizing border-box
            top 0
            left 0
            width 100%
            padding 1em 0
            font-weight 800
            font-size 18px
            letter-spacing 1px
            color $XDEFAULT_BG
            background-color lighten($C4, 10%)
            text-align center
            border-radius 5px 5px 0 0
        &>form
            display flex
            flex-direction column
            justify-content center
            align-items center
            position relative
            &>label
                display inline-flex
                flex-direction row
                justify-content space-around
                align-items center
                width 100%
                padding .4em 0
                &>input[type="text"], &>input[type="password"]
                    border 1px solid transparentify($C0, .2)
                    border-radius 2px
                    padding .6em
                    margin-left 1em
                    outline none
            &>button
                font-size 16px
                padding .6em 1.6em
                margin-top .8em
                transition background-color .4s
                &.error
                    background-color $C1
                    animation buttonError .1s
                    animation-iteration-count 2
                    animation-timing-function ease-in-out

@keyframes xtechneLoginFadeIn
    from
        opacity 0
    to
        opacity 1

@keyframes xtechneLoginSlideIn
    from
        transform translateY(50px)
        opacity 0
    to
        transform translateY(0)
        opacity 1

@keyframes buttonError
    from
        transform translateX(-4px)
    to
        transform translateX(4px)
