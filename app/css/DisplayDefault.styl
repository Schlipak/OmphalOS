//=======================================//
// Default display surface style for TTY //
// Also includes xinstance TTY styles    //
//=======================================//

@require "DefaultVars"

html, body
    width 100%
    height 100%
    top 0
    left 0
    margin 0
    padding 0
    overflow hidden
    font-size $BASE_FONT_SIZE
    font-family $WIDE

*
    box-sizing border-box

#osContainer
    display block
    position relative
    width 100%
    height 100%
    top 0
    left 0
    padding 0
    margin 0
    font-family $MONO
    background-color $DEFAULT_BG
    color $DEFAULT_FG

.noselect
    -webkit-touch-callout none
    -webkit-user-select none
    -khtml-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none

span
    &.F
        color $DEFAULT_FG
        &.black, &[data-color="0"]
            color $C0
        &.red, &[data-color="1"]
            color $C1
        &.green, &[data-color="2"]
            color $C2
        &.yellow, &[data-color="3"]
            color $C3
        &.blue, &[data-color="4"]
            color $C4
        &.magenta, &.purple, &[data-color="5"]
            color $C5
        &.cyan, &[data-color="6"]
            color $C6
        &.white, &[data-color="7"]
            color $C7
    &.B
        background-color $DEFAULT_BG
        &.black, &[data-color="0"]
            background-color $C0
        &.red, &[data-color="1"]
            background-color $C1
        &.green, &[data-color="2"]
            background-color $C2
        &.yellow, &[data-color="3"]
            background-color $C3
        &.blue, &[data-color="4"]
            background-color $C4
        &.magenta, &.purple, &[data-color="5"]
            background-color $C5
        &.cyan, &[data-color="6"]
            background-color $C6
        &.white, &[data-color="7"]
            background-color $C7

.tty
    display none
    position relative
    width 100%
    height 100%
    top 0
    left 0
    padding 1em
    margin 0
    background-color $DEFAULT_BG
    color $DEFAULT_FG
    overflow auto
    &.active
        display flex
        flex-direction column
        & > span
            margin .3em 0
    &.xinstance
        display block
        padding 0
        background-color $XDEFAULT_BG
        color $XDEFAULT_FG
        overflow hidden

button.material.button, input.material.button[type="button"], a.material.button
    display inline-block
    position relative
    padding .4em 1.3em
    border-radius 3px
    border none
    outline none
    box-shadow 0 1px 1.5px 0 rgba(0,0,0,.12), 0 1px 1px 0 rgba(0,0,0,.24)
    transition box-shadow .3s
    cursor pointer
    &:active
        box-shadow 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 5px 0 rgba(0,0,0,.23)
    &.blue
        background-color $C4
        color $DEFAULT_FG
