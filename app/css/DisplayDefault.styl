//============================================//
// Default display surface style for XManager //
// Also includes kernel TTY styles            //
//============================================//

$C0 = #212121
$C1 = #F44336
$C2 = #4CAF50
$C3 = #FBC02D
$C4 = #3F51B5
$C5 = #9C27B0
$C6 = #00BCD4
$C7 = #FFFFFF

$DEFAULT_BG = $C0
$DEFAULT_FG = $C7

$MONO = 'Courier New', courier, monospace

//==========//

html, body
    width 100%
    height 100%
    top 0
    left 0
    margin 0
    padding 0
    overflow hidden

*
    box-sizing border-box

#osContainer
    display block
    position relative
    width 100%
    height 100%
    top 0
    left 0
    padding 0
    margin 0
    font-family $MONO
    background-color $DEFAULT_BG
    color $DEFAULT_FG

span
    &.F
        color $DEFAULT_FG
        &.black, &[data-color="0"]
            color $C0
        &.red, &[data-color="1"]
            color $C1
        &.green, &[data-color="2"]
            color $C2
        &.yellow, &[data-color="3"]
            color $C3
        &.blue, &[data-color="4"]
            color $C4
        &.magenta, &.purple, &[data-color="5"]
            color $C5
        &.cyan, &[data-color="6"]
            color $C6
        &.white, &[data-color="7"]
            color $C7
    &.B
        background-color $DEFAULT_BG
        &.black, &[data-color="0"]
            background-color $C0
        &.red, &[data-color="1"]
            background-color $C1
        &.green, &[data-color="2"]
            background-color $C2
        &.yellow, &[data-color="3"]
            background-color $C3
        &.blue, &[data-color="4"]
            background-color $C4
        &.magenta, &.purple, &[data-color="5"]
            background-color $C5
        &.cyan, &[data-color="6"]
            background-color $C6
        &.white, &[data-color="7"]
            background-color $C7

.tty
    display none
    position relative
    width 100%
    height 100%
    top 0
    left 0
    padding 1em
    margin 0
    background-color $DEFAULT_BG
    color $DEFAULT_FG
    &.active
        display flex
        flex-direction column
        & > *
            margin .3em 0
    &.xinstance
        display block
        padding 0
