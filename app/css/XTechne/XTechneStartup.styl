//=================================//
// Base styles for XTechne startup //
//=================================//

@require '../DefaultVars'

.xtechneStartupContainer
    display flex
    flex-direction row
    justify-content center
    align-items center
    width 100%
    height 100%
    top 0
    left 0
    margin 0
    padding 0
    background-color darken($C4, 60%)
    opacity 0
    animation XTechneStartupFade 5s
    animation-iteration-count 1
    animation-timing-function ease-in-out
    &:before
        content ''
        display inline-block
        width 250px
        height 250px
        background-image url('../usr/share/img/omphalos_250.png')
        background-position center center
        background-repeat no-repeat
        animation XTechneStartupPopIn .5s
        animation-iteration-count 1
        animation-timing-function ease-in-out
        z-index 200
    &>#XTechneStartupOsName
        display inline-block
        font-size 100px
        margin-left 0
        width 0
        font-family $NARROW
        color $C7
        font-weight 300
        animation XTechneStartupWiden 1.2s
        animation-iteration-count 1
        animation-timing-function ease-in-out
        animation-delay 1.5s
        animation-fill-mode forwards
        overflow hidden
        z-index 100
        &>span
            font-weight 700

@keyframes XTechneStartupFade
    0%
        opacity 0
    5%, 95%
        opacity 1
    100%
        opacity 0

@keyframes XTechneStartupPopIn
    from
        transform scale(0)
    to
        transform scale(1)

@keyframes XTechneStartupWiden
    from
        margin-left 0
        width 0
    to
        margin-left .4em
        width 415px
