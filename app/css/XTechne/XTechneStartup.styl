//=================================//
// Base styles for XTechne startup //
//=================================//

@require '../DefaultVars'
@require '../Animations'

.xtechneStartupContainer
    display flex
    flex-direction row
    justify-content center
    align-items center
    width 100%
    height 100%
    top 0
    left 0
    margin 0
    padding 0
    background-color darken($C4, 60%)
    opacity 0
    animation fadeInOut5 5s
    animation-iteration-count 1
    animation-timing-function ease-in-out
    &:before
        content ''
        display inline-block
        width 250px
        height 250px
        background-image url('../usr/share/img/omphalos.svg')
        background-position center center
        background-repeat no-repeat
        background-size 250px 250px
        animation popIn .5s
        animation-iteration-count 1
        animation-timing-function ease-in-out
        z-index 200
    &>#XTechneStartupOsName
        display inline-block
        position relative
        font-size 100px
        margin-left 0
        padding-bottom 10px
        width 0
        font-family $NARROW
        color $C7
        font-weight 300
        animation XTechneStartupWiden 1.2s
        animation-iteration-count 1
        animation-timing-function ease-in-out
        animation-delay 1.5s
        animation-fill-mode forwards
        overflow hidden
        cursor default
        z-index 100
        &>span
            font-weight 700
        &>#XTechneStartupOsDetails
            display block
            position absolute
            right 0
            bottom 0
            width 400px
            height 0
            text-align right
            font-size 20px
            color darken($C7, 20%)
            animation XTechneStartupRise .6s
            animation-iteration-count 1
            animation-timing-function ease-in-out
            animation-fill-mode forwards
            animation-delay 2.5s

@keyframes XTechneStartupWiden
    from
        margin-left 0
        width 0
    to
        margin-left .4em
        width 415px

@keyframes XTechneStartupRise
    from
        height 0
    to
        height 1em
