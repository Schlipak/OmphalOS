//=================================//
// Base styles for XTechne Windows //
//=================================//

@require '../DefaultVars'

div.xtechneWindow
    display block
    position absolute
    width 300px
    height 200px
    font-family $WIDE
    font-weight 400
    padding-top 25px
    background-color $C7
    border 1px solid lighten($C0, 10%)
    border-radius 6px 6px 3px 3px
    box-shadow 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 5px 0 rgba(0,0,0,.23)
    opacity 1
    pointer-events auto
    outline none
    transition opacity .4s
    overflow hidden
    &.moving
        transition opacity .4s, width .4s, height .4s, top .4s, left .4s, bottom .4s, right .4s
        will-change width, height, top, left, bottom, right
    &>.bar
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        position absolute
        top 0px
        left 0
        width 100%
        height 25px
        padding 0 10px
        background-color lighten($C0, 10%)
        border 1px solid lighten($C0, 10%)
        border-radius 3px 3px 0 0
        cursor default
        &>span.windowBorderName
            text-align left
            color $C7
            font-family $NARROW
            font-weight 300
            cursor default
        &>nav.windowBorderControls
            display inline-block
            position relative
            height 100%
            &>span.windowBorderControl
                display inline-block
                position relative
                width 20px
                height 100%
                margin 0
                background-size 10px
                background-repeat no-repeat
                background-position center center
                cursor pointer
                &.minimize
                    background-image url('../usr/share/icons/common/minimize.svg')
                &.maximize
                    background-image url('../usr/share/icons/common/maximize.svg')
                &.close
                    background-image url('../usr/share/icons/common/close.svg')
    // &:focus
    //     border 1px solid $C0
    //     &>.bar
    //         background-color $C0
    //         border 1px solid $C0
    &.borderless
        border none
        border-radius 0
    &.hidden
        opacity 0
        pointer-events none
